<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="3dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:background="@color/colorAccent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Thông tin thanh toán"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:padding="2sp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView28">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:textSize="14sp"
            android:text="Tổng tiền hàng(chưa bao gồm phí vận chuyển trong nước)"
            android:layout_weight="1"
            android:textColor="#000000">
        </TextView>
        <TextView
            android:id="@+id/my_orderdetail_totalamount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="đ 100,000"
            android:textSize="14sp"
            android:textAlignment="textEnd"
            android:layout_weight="1"
            android:textColor="#000000">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:padding="2sp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:textSize="14sp"
            android:text="Đã thanh toán(đặt cọc)"
            android:layout_weight="1"
            android:textColor="#000000">
        </TextView>
        <TextView
            android:id="@+id/my_orderdetail_deposit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="đ 100,000"
            android:textSize="14sp"
            android:textAlignment="textEnd"
            android:layout_weight="1"
            android:textColor="#000000">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:padding="2sp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:textSize="16sp"
            android:text="Còn phải thanh toán"
            android:layout_weight="1"
            android:textColor="#000000">
        </TextView>
        <TextView
            android:id="@+id/my_orderdetail_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="đ 0"
            android:textSize="16sp"
            android:textAlignment="textEnd"
            android:layout_weight="1"
            android:textColor="#FF9100">
        </TextView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>